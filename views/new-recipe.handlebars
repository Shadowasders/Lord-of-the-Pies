<section class="login-signup">
  {{!-- <section class="card-wrapper"> --}}
  <h2 class="title"><u>Submit A New Recipe</u></h2>
  <button id="upload_widget" class="cloudinary-button">Upload files</button>

  <script
    src="https://upload-widget.cloudinary.com/global/all.js"
    type="text/javascript"
  ></script>

  <h3 class="title">Submit a photo of your creation here!</h3>

  <input type="text" id="filename" />

 <script type="text/javascript">var filenameInput =
    document.getElementById('filename'); var myWidget =
    cloudinary.createUploadWidget({ cloudName: 'dztenzqel', uploadPreset:
    '{{upload_preset}}' }, (error, result) => { if (!error && result && result.event ===
    "success") { console.log('Done! Here is the image info: ', result.info);
    filenameInput.value = result.info.url} } )
    document.getElementById("upload_widget").addEventListener("click",
    function(){ myWidget.open(); }, false);
  </script>

  <form class="new-recipe-form">
    <div class="field">
      <label for="recipe-name" class="label title">Recipe Name:</label>
      <div class="control">
        <input
          class="form-input"
          type="text"
          id="recipe-name"
          name="recipe-name"
        />
      </div>
    </div>
    <div class="field">
      <label for="recipe-detail" class="label title">Details:</label>
      <textarea
        class="recipe-detail textarea is-small"
        rows="5"
        id="recipe-detail"
        name="recipe-detail"
      ></textarea>
    </div>
    <div class="field">
      <label for="alt_text" class="label subtitle">Just in case the image
        doesn't work explain it</label>
      <textarea
        name="alt_text"
        class="textarea is-small"
        id="alt_text"
        rows="5"
      ></textarea>
    </div>
      </label>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <button
          class="button"
          type="submit"
          class="submitRecipeBtn button"
        >Submit Recipe</button>
      </div>
    </div>
  </form>
</section>
<script src="/js/new-recipe.js"></script>
