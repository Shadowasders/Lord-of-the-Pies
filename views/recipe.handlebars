<section class="login-signup">

  <div class="has-text-centered">
    <h1 class="title is-underlined has-text-center">Edit Recipe</h1>
  </div>

  <form class="new-post-form field">
    <label class="label subtitle" for="recipe-title">Recipe Name:</label>
    <div class="control">
      <textarea
        class="form-input input"
        type="text"
        id="update-name"
        name="update-name"
      >{{name}}</textarea>
    </div>
  </form>
  <form class="field">
    <label class="label subtitle" for="recipe-detail">Type details below:</label>
    <div class="control">
      <textarea
        class="update-detail textarea is-small"
        row="5"
        id="update-detail"
        name="update-detail"
      >{{detail}}</textarea>
    </div>
  </form>

  <form class="update-delete field is-grouped columns">
    <div class="control column">
      <button
        class="button is-rounded is-fullwidth"
        id="updateBtn"
        data-id="{{id}}"
      >UPDATE</button>
    </div>
    <div class="control column">
      <button
        class="button is-rounded is-fullwidth is-danger"
        id="deleteBtn"
        data-id="{{id}}"
      >DELETE</button>
    </div>
  </form>

