<h3 class="title has-text-centered mt-2"><u>There are {{recipes.length}} recipes in your feed!</u></h3>
<div class="card">
  {{#each recipes as |recipe|}}
    <div class="card-image">
      <figure class="image is-3by3">
          <img
              src="../../images/{{recipe.filename}}"
              alt="{{recipe.alt_text}}"
            />
      </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-24x24">
              <img src="../images/pietest.png" alt="basic pie image">
            </figure>
          </div>
        </div>
        </div>
        <div class="media-content">
          <a href="/recipe/{{id}}">
            <h3 class="rec-name title">[<span>{{id}}</span>] {{name}}</h3>
          </a>
        </div>
        <div class="content">
          <p class="blog-author subtitle">Posted by
            {{user.username}}
            on
            {{format_date created_on}}</p>
            <p class="subtitle">
            {{recipe.detail}}
          </p>
        </div>
  {{/each}}
</div>
{{> chat}}