<section class="">
  <div class="">
    <div class="">
      <article class="">
        <h2 class="">
          [<span id="numbered-post">{{id}}</span>]{{name}}
        </h2>
        <p>
          Posted by
          {{user.username}}
          on
          {{format_date created_on}}
        </p>
      </article>

      <article class="">
        <p>
          {{detail}}
        </p>
      </article>
    </div>
    <form class="card">

      <label class="form-detail" for="comment-detail">Type your comment below:</label>
      <textarea
        class="form-detail"
        id="comment-detail"
        name="comment-detail"
        placeholder="Commenting as {{user_name}}..."
      ></textarea>

      <button
        type="submit"
        class="submitCommentBtn"
        data-id="{{recipe.id}}"
      >Submit your comment</button>
    </form>
  </div>

  {{! renders list of comments if they exist }}

  {{#if comments.length}}
    <article class="card">
      <h3>{{comments.length}} Comments:</h3>
      {{#each comments as |comment|}}

        <div class="card">
          <p class="card-detail" id="comment">
            {{comment.user.username}}
            says:
          </p>
          <p class="card-detail">{{detail}}</p>
        </div>
      {{/each}}
    </article>
  {{/if}}

  <span id="current-user">{{user_id}}</span>
</section>

<script src="/js/comment.js"></script>