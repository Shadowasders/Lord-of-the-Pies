<section>
  <form class="login-form">
    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left has-icons-right">
        <input
          id="email-login"
          class="input"
          type="text"
          placeholder="Enter your email"
        />
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Password</label>
      <div class="control has-icons-left has-icons-right">
        <input
          id="password-login"
          class="input"
          type="password"
          placeholder="Enter password"
        />
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fa-check"></i>
        </span>
      </div>
    </div>
    <button type="submit" class="probtn button is-fullwidth is-rounded">Let's bake!</button>
  </form>
</section>
<div class="signup sectspace">
  <a href="/signup"><button class="button is-fullwidth is-rounded">Or, if you don't have an account, sign up here!</button></a>
</div>
<script src="/js/login.js"></script>
